{% for rule in sprite %}
.{{ prefix }}{{ rule.file.getBasename('.' ~ rule.file.getExtension()) }} {
    display: inline-block;
    width: {{ rule.width }}px;
    height: {{ rule.height }}px;
    background: url("{{ url }}") -{{ rule.x }}px -{{ rule.y }}px;
}
{% endfor %}
